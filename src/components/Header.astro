---
import { Image } from "astro:assets";
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import { site } from "@/consts"

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex items-center w-full flex-col gap-2 md:flex-row md:justify-between">
  <a href="/" class="hover:text-neutral-100">
    <Image
      src="/logo.svg"
      alt="Website Logo"
      height={200}
      width={200}
      class="h-8 w-auto block dark:hidden"
    />
    <Image
      src="/logo-dark.svg"
      alt="Website Logo"
      height={200}
      width={200}
      class="h-8 w-auto hidden dark:block"
    />
  </a>

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-indigo-700 dark:hover:text-indigo-400"]: true,
            ["text-indigo-700 dark:text-indigo-400"]: pathname === "/",
          }}>Home</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/articles"
          class:list={{
            ["hover:text-indigo-700 dark:hover:text-indigo-400"]: true,
            ["text-indigo-700 dark:text-indigo-400"]: pathname === "/articles",
          }}>Articles</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/talks"
          class:list={{
            ["hover:text-indigo-700 dark:hover:text-indigo-400"]: true,
            ["text-indigo-700 dark:text-indigo-400"]: pathname === "/talks",
          }}>Talks</a
        >
      </li>
    </ul>
  </nav>
</header>